
@model DataLayer.ViewModels.ProductIndexViewModel

@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-sm-4">
        <div class="form-group">
            <p>
                <a asp-action="Create" class="btn btn-success" style="margin-left:20px; margin-top:20px">Add Product</a>
            </p>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="form-group">
            <form asp-action="Index" asp-controller="Product">
                <div class="col-md-10">
                    <select asp-for="FilterType" asp-items="Html.GetEnumSelectList<DataLayer.ViewModels.ProductIndexViewModel.FilterProduct>()" onchange="this.form.submit()" style="margin-top:30px">          
                        <option selected="selected" value="">Sort by ......</option>
                    </select>
                </div>
            </form>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="form-group">
            <form asp-action="Index" asp-controller="Product">
                <div class="col-md-10">                
                    <select asp-for="FilterBrand" asp-items="Html.GetEnumSelectList<DataLayer.Models.ManufacturerType>()" onchange="this.form.submit()" style="margin-top:30px">
                        <option selected="selected" value="">Sort by brand......</option>
                    </select>
                </div>
            </form>
        </div>
    </div>
</div>

<table class="table table-striped table-hover" style="margin-left: 20px">
    <thead>
        <tr>
            <th>Manufacturer</th>
            <th>Manufacturer ID</th>
            <th>Store</th>
            <th>Price</th>
            <th>Body Type</th>
            <th>String Number</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Product)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Manufacturer)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Model)
                    </td>*@
                @*<td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.ManufacturersId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Store)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BodyType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StringNumber)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.IsLeftHanded)
                    </td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-primary btn-sm" style="margin-left:5px">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm" style="margin-left:5px">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
